# Backend API URL for frontend
VITE_API_BASE_URL=https://your-backend-url.railway.app

# For local development, use:
# VITE_API_BASE_URL=http://localhost:5000

# Backend Environment Variables (for Railway/Render/Heroku)
NODE_ENV=production
PORT=5000

# Frontend URL for OAuth redirects
FRONTEND_URL=https://base-lint.netlify.app

# GitHub Personal Access Token for unauthenticated users (5 requests/minute)
GITHUB_PAT=your-github-personal-access-token

# SECURITY - CRITICAL: Generate secure secrets
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-secure-session-secret-32-chars-minimum
ENCRYPTION_KEY=your-encryption-key-32-chars-minimum

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your-github-oauth-app-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-app-client-secret
GITHUB_CALLBACK_URL=https://your-backend-url.railway.app/auth/github/callback

# For local development, use:
# GITHUB_CALLBACK_URL=http://localhost:5000/auth/github/callback

# SECURITY NOTES:
# - Never commit these values to version control
# - Use different secrets for each environment
# - Rotate secrets regularly in production
# - Monitor for unauthorized access
